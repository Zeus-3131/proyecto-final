<main class="flex-grow-1 d-flex w-100 flex-wrap justify-content-evenly">
  <section 
    class="w-50 mb-4 d-flex flex-column justify-content-start align-items-center"
    style="min-width: 380px;"
  >
    <h2 class="mt-5 mb-2 text-center">CREAR UN EVENTO</h2>
    <form
      style="max-width: 360px;"
      class="w-100 d-flex flex-column justify-content-center items-align-center"
    >
      <fieldset class="mb-3 text-center"> 
        <label for="nombre" class="form-label mb-0">Nombre</label>
        <input type="text" class="form-control" id="nombre" />
      </fieldset>
      <fieldset class="mb-3 text-center">
        <label for="imagen" class="form-label mb-0">Imagen</label> 
        <input type="text" class="form-control" id="imagen" />
      </fieldset>
      <fieldset class="mb-3 text-center">
        <label for="precio" class="form-label mb-0">Precio</label>
        <input type="number" class="form-control" id="precio" />
      </fieldset>
      <fieldset class="mb-3 text-center">
        <label for="stock" class="form-label mb-0">Stock</label>
        <input type="number" class="form-control" id="stock" />
      </fieldset>
      <fieldset class="mb-3 text-center">
        <label for="date" class="form-label mb-0">Fecha</label>
        <input type="date" class="form-control" id="date" />
      </fieldset>
      <button
        id="newProduct"
        type="button"
        class="w-100 btn btn-danger"
      >CREAR</button>
    </form>
  </section>
  <section class="w-50 mb-4" style="min-width: 380px;">
    <h2 class="mt-5 mb-2 text-center">EVENTOS</h2>
    <article
      id="products"
      class="d-flex flex-wrap justify-content-evenly"
    ></article>
  </section>
</main>
<script src="/socket.io/socket.io.js"></script>
<script src="/real.js"></script>
